{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"lib": ["esnext", "dom", "dom.iterable", "webworker"],
		"strict": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"noFallthroughCasesInSwitch": true,
		"baseUrl": ".",
		"downlevelIteration": true,
		"paths": {
			"@game": ["src/game/ts/index.ts"],
			"@game/*": ["src/game/ts/*"],
			"@ui": ["src/ui/index.ts"],
			"@ui/*": ["src/ui/*"],
			"@public/*": ["public/*"],
			"@common/*": ["src/common/*"]
		}
	},
	"include": ["src/", ".eslintrc.js", "webpack.config.js"]
}
